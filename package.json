{
  "name": "v-md",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue}",
    "tsc:libs": "pnpm -F @v-md/app -F @v-md/plugin-editor-volar -F @v-md/plugin-lang-sass tsc",
    "dev:play": "pnpm -F @v-md/playground run dev",
    "dev:doc": "pnpm -F @v-md/doc run dev",
    "build-check:libs": "pnpm -F \"./libs/**\" -F \"./plugins/**\" build-check",
    "build:play": "pnpm -F @v-md/playground build",
    "build:doc": "pnpm -F @v-md/doc build",
    "build:libs": "pnpm -F \"./libs/**\" -F \"./plugins/**\" build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage.enabled",
    "test:preview": "vite preview --outDir vitest-output/html",
    "release": "pnpm build:libs && changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@types/node": "^24.7.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "read-pkg": "^9.0.1",
    "tsx": "^4.20.6",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
